<h1><%= @store.name() %></h1>

<h3>Select all shoes available at this store:</h3>

<% if @shoes.any?() %>
<form action="/stores/<%= @store.id %>" method="post">
  <input type="hidden" name="_method" value="patch">
  <% @shoes.each() do |shoe| %>
  <div class="checkbox">
    <label>
      <input type="checkbox" id="<%= shoe.id() %>" name="shoe_ids[]" value="<%= shoe.id() %>"><%= shoe.brand() %>
    </label>
  </div>
  <% end %>

  <button type="submit">Add shoes</button>
</form>
<% end %>

<% if @store.shoes().any?() %>

<h3>Here are all the shoes in this store:</h3>

<ul>
  <% @store.shoes().each() do |shoe| %>
  <li><%= shoe.brand() %></li>
  <% end %>
</ul>
<% else %>
<p>There are no shoes yet! <a href="/shoes">Add shoes here</a></p>
<% end %>

<hr>
<h4>Your store name is lame!</h4>
<a href="/stores/<%= @store.id() %>/edit">Click to change it.</a>





<hr>

<h4>No customers. DELETE!!</h4>
<form action="/stores/<%= @store.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">


  <button type="submit" class="btn btn-info">Delete Store</button>
</form>


