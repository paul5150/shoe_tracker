<h1><%= @shoe.brand() %></h1>

<h3>Select all stores with this shoe:</h3>

<% if @stores.any?() %>
<form action="/shoes/<%= @shoe.id %>" method="post">
  <input type="hidden" name="_method" value="patch">

  <% @stores.each() do |store| %>
  <div class="checkbox">
    <label>
      <input type="checkbox" id="<%= store.id() %>" name="store_ids[]" value="<%= store.id() %>"><%= store.name() %>
    </label>
  </div>
  <% end %>

  <button type="submit" class="btn btn-info">Add stores</button>
</form>
<% end %>


<% if @shoe.stores().any?() %>
<h3>Here are all the stores with this shoe:</h3>

<ul>
  <% @shoe.stores().each() do |store| %>
  <li><%= store.name() %></li>
  <% end %>
</ul>
<% else %>
<p>There are no stores yet!</p>
<% end %>
<hr>
<h4>Your shoe isn't selling! Rename and charge more!:</h4>
<a href="/shoes/<%= @shoe.id() %>/edit">Change name.</a>





<hr>

<h4>Your shoe is terrible!  DELETE!!</h4>
<form action="/shoes/<%= @shoe.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">


  <button type="submit" class="btn btn-info">Delete Shoe</button>
</form>


